/* Navigation Bar */
.dashboard-navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 0.7rem 2.5rem 0.7rem 1.2rem;
    border-radius: 0 0 18px 18px;
    margin: 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    min-height: 64px;
    animation: slideDown 0.8s ease-out;
}

.navbar-brand {
    display: flex;
    align-items: center;
    gap: 0.7rem;
}

.navbar-logo {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background removed for PNG logo */
}

.navbar-title {
    font-size: 1.35rem;
    font-weight: bold;
    color: #1746a2;
    letter-spacing: 1px;
}

.navbar-links {
    display: flex;
    gap: 1.1rem;
    flex: 1;
    justify-content: center;
}

.nav-btn {
    padding: 8px 16px;
    text-decoration: none;
    color: #666;
    border-radius: 8px;
    transition: all 0.3s ease;
    font-weight: 500;
}

.nav-btn:hover, .nav-btn.active {
    background: linear-gradient(45deg, #1746a2, #4facfe);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(23, 70, 162, 0.3);
}

