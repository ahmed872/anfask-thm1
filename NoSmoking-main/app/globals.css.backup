:root {
  --background: #ffffff;
  --foreground: #171717;
}

@media (prefers-colobody {
  color: var(--foreground);
  background: linear-gradient(to bottom, #ffffff, #d8f3ff, #a0e9ff); /* تدرج أزرق موحد لكل الصفحات */
  font-family: 'Cairo', Arial, Helvetica, sans-serif;
  direction: rtl; /* دعم اللغة العربية */
  min-height: 100vh;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}: dark) {
  :root {
    --background: #0a0a0a;
    --foreground: #ededed;
  }
}


html,
body {
  max-width: 100vw;
  overflow-x: hidden;
}
/* Animations */
@keyframes slideDown {
    from {
        transform: translateY(-100%);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Responsive Design for Navbar */
@media (max-width: 768px) {
    .hamburger-menu {
        display: block;
        color: #1746a2;
    }

    .navbar-links {
        position: fixed;
        top: 64px;
        right: 0;
        width: 60%;
        max-width: 300px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        box-shadow: -2px 0 8px rgba(0, 0, 0, 0.1);
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
        transform: translateX(100%); /* تبدأ خارج الشاشة */
        transition: transform 0.3s ease;
        height: 100vh;
        z-index: 150;
        border-radius: 18px 0 0 18px;
    }

    /* لما تكون مقفولة */
    .hide-menu {
        transform: translateX(100%);
    }

    /* لما تكون مفتوحة */
    .show-menu {
        transform: translateX(0);
    }

    .nav-btn {
        padding: 12px;
        font-size: 1.1rem;
        text-align: center;
        border-radius: 12px;
    }
}

/* Hide hamburger menu on desktop */
@media (min-width: 769px) {
    .hamburger-menu {
        display: none;
    }
}

